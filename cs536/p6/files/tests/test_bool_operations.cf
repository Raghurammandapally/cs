void print(bool x, bool y) {
  cout << "x: ";
  cout << x;
  cout << "\n";

  cout << "y: ";
  cout << y;
  cout << "\n";

  cout << "x == y: ";
  cout << x == y;
  cout << "\n";

  cout << "x != y: ";
  cout << x != y;
  cout << "\n";

  cout << "x && y: ";
  cout << x && y;
  cout << "\n";

  cout << "x || y: ";
  cout << x || y;
  cout << "\n";

  cout << "!x: ";
  cout << !x;
  cout << "\n";

  cout << "!y: ";
  cout << !y;
  cout << "\n";

}
  
void main() {
  bool x;
  bool y;
  while(true) {
    cout << "Give me one bool (0 or 1):";
    cout << "\n";
    cin >> x;
    cout << "Give me another (0 or 1):";
    cout << "\n";
    cin >> y;
    print(x, y);
  }
}
